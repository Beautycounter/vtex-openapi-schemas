                        "schema": {
                            "type": "string",
                            "default": "application/json"
                        }
                    },
                    {
                        "name": "Accept",
                        "in": "header",
                        "description": "HTTP Client Negotiation _Accept_ Header. Indicates the types of responses the client can understand.",
                        "required": true,
                        "style": "simple",
                        "schema": {
                            "type": "string",
                            "default": "application/json"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "headers": {},
                        "content": {
                            "application/json":{
                                "schema": {
                                    "description": "",
                                    "type": "object",
                                    "properties": {
                                        "average": {
                                            "description": "Avarage rating of the product.",
                                            "type": "number",
                                            "example": 3.86
                                        },
                                        "totalCount": {
                                            "description": "Total amount of ranting of the product.",
                                            "type": "number",
                                            "example": 7
                                        }
                                    },
                                    "example": {
                                        "average": 3.86,
