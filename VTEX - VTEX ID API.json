                "style": "simple",
                "schema": {
                    "type": "string",
                    "example": "application/json"
                }
            },
            "an": {
                "name": "an",
                "in": "query",
                "description": "Account name.",
                "required": true,
                "style": "form",
                "schema": {
                    "type": "string",
                    "example": "exampleAccount"
                }
            }
        },
        "schemas": {
            "credentials": {
                "type": "object",
                "required": ["appkey", "apptoken"],
                "properties": {
                    "appkey": {
                        "type": "string",
